<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalhes do Histórico de Compras</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h2>Detalhes do Histórico de Compras</h2>
    <% historicos.forEach(historico => { %>
      <div class="historico-item mb-3">
        <p><strong>Fornecedor:</strong> <%= historico.fornecedor.nome %></p>
        <p><strong>Produto:</strong> <%= historico.produto.nome %></p>
        <p><strong>Quantidade:</strong> <%= historico.quantidade %></p>
        <p><strong>Valor Total:</strong> R$ <%= (historico.quantidade * historico.produto.preco).toFixed(2) %></p>
        <hr>
      </div>
    <% }); %>
    <a href="/historico_compras" class="btn btn-secondary">Voltar</a>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
